/* pages/list/index.wxss */
.items-list{
  margin: 20rpx;
}
.pro-logo{
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin: 0 20rpx 15rpx 0;
  border-radius: 100%;
}
.pro-body{
  width: 100%;
  display: inline-block;
  border-bottom: 1rpx solid hsl(0, 1%, 86%);
}
.pro-icon-play{
    float: right;
    flex: 0 0 86rpx;
    width: 86rpx;
    height: 86rpx;
    margin-left: 20rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: contain;
}
.pro-title{
  color:#212121;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
.pro-desc{
  font-size: 30rpx;
  color:#9a9a9a;
}
.pro-desc-length{
  font-size: 30rpx;
  color:#9a9a9a;
  float: right;
}